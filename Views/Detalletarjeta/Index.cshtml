@model IEnumerable<CompanyJLSV7.Models.Detalletarjeta>

@{
    ViewBag.Title = "Detalle de tarjetas";
}

<h2>Detalle de tarjetas</h2>

<p>
    @Html.ActionLink("Agregar nueva tarjeta", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombretitular)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fechavencimiento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CVV)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombretitular)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fechavencimiento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CVV)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Numerotarjeta }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.Numerotarjeta }) |
